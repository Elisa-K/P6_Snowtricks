{% if form.vars.data is not null and form.vars.data.id is not null %}
	<div class="text-center">
		<img src="{{ asset('uploads/') ~ form.vars.data.path}}" alt="" class="img-fluid img-preview mt-2">
		<button type="button" class="btn-remove mb-3"><i class="bi bi-trash3-fill"></i></button>
		{{ form_widget(form.path)}}
	</div>
{% else %}

	<img src="{{ asset('assets/img/default-placeholder.png') }}" alt="" class="img-fluid img-preview mt-2">
	<div class="d-flex align-items-center">

		{{ form_widget(form.file) }}

		<button type="button" class="btn-remove mb-3"><i class="bi bi-trash3-fill"></i></button>
	</div>
{% endif %}
