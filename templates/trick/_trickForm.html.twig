<div class="col-12 col-lg-4">
	{{ form_row(trickForm.groupTrick) }}
</div>
<div class="col-12 col-lg-8">
	{{ form_row(trickForm.name) }}
</div>
<div class="col-12">
	{{ form_row(trickForm.description, { 'attr': {'rows': '10'} }) }}
</div>
<div class="col-12">
	<img id="img-preview-featured" src="{{ trick is defined ? asset('uploads/') ~ trick.featuredImage : asset('assets/img/default-placeholder.png') }}" alt="" class="img-fluid img-preview">
	{{ form_row(trickForm.featuredImage) }}
</div>
<h3 class="my-3">Gallerie</h3>
<div class="col-12">
	<div
		id="photos"
		class="row photos"
		data-prototype="{{ include("trick/_photoForm.html.twig", {form: trickForm.photos.vars.prototype})|e('html_attr') }}"
		data-index="{{ trickForm.photos|length > 0 ? trickForm.photos|last.vars.name + 1 : 0 }}">
		{% for photo in trickForm.photos %}
			<div class="col-12 col-lg-4">
				{% if trick.photos[loop.index0].path %}
					<div class="text-center">
						<img src="{{ asset('uploads/') ~ trick.photos[loop.index0].path}}" alt="" class="img-fluid img-preview mt-2">
						<button type="button" class="btn-remove mb-3"><i class="bi bi-trash3-fill"></i></button>
						{{ form_row(photo.path)}}
					</div>
				{% else %}
					{{ include("trick/_photoForm.html.twig", {form: photo}) }}
				{% endif %}
			</div>
		{% endfor %}

	</div>
	<button type="button" class="btn btn-primary add-media mb-3" data-list-selector="#photos">Ajouter une photo</button>
	{{ form_errors(trickForm.photos) }}
</div>
<hr>
<div class="col-12">
	<div
		id="videos"
		class="row videos"
		data-prototype="{{ include("trick/_videoForm.html.twig", {form: trickForm.videos.vars.prototype})|e('html_attr') }}"
		data-index="{{ trickForm.videos|length > 0 ? trickForm.videos|last.vars.name + 1 : 0 }}">
		{% for video in trickForm.videos %}
			<div class="col-12 col-lg-4">
				{{ include("trick/_videoForm.html.twig", {form: video}) }}
			</div>
		{% endfor %}
	</div>
	<button type="button" class="btn btn-primary add-media mb-3" data-list-selector="#videos">Ajouter une vid√©o</button>

</div>